
.header{
  width: 100%;
  height: 50px;
  background-color: #eeeeee;
  line-height: 50px;
  text-align: center;
  font-size: 18px;
  margin-bottom: 30px;
}
.header image{
  height: 20px;
  width: 20px;
  position: relative;
  left: 0px;
  top: 3px;
  /* color:#3894FF */
}
.kecheng{
  width: 100%;
  height: 140px;
  border: 1px solid #bbb;
  margin-bottom: 30px;
}
.kecheng .kecheng-top{
  width: 100%;
  height: 70px;
  line-height: 70px;
}
.kecheng .kecheng-bottom{
  width: 100%;
  height: 70px;
  line-height: 70px;
}
.kecheng .kecheng-top text, .kecheng .kecheng-bottom text{
  margin-left: 30px;
  font-size: 14px;
}
.kecheng .kecheng-top van-button, .kecheng .kecheng-bottom van-button{
  margin-left: 20px;
}

.c1{
  width: 90%;
  height: auto;
  margin: 0 auto;
  border: 1px solid #bbb;
  overflow: hidden;
  font-size: 12px;
  margin-bottom: 30px;
}
.c1-top{
  width: 100%;
  height: 50px;
  display: flex;
}
.c1-top view{
  width: 17%;
  height: 50px;
  float: left;
  text-align: center;
}
.c1-top view image{
  width: 30px;
  height: 30px;
  margin-top: 5px;
}
.c1-top view text{
  display: block;
  margin-top: -10px;
}
.c1-left{
  width: 83%;
  height: 250px;
  float: left;
  font-size: 10px;
}
.c1-left1{
  width: 100%;
  height: 33%;
}
.c1-left1-top{
  width: 100%;
  height: 50%;
}
.c1-left1-top view,.c1-left1-bottom view{
  width: 16%;
  height: 100%;
  float: right;
  text-align: center;
}
.c1-left1-top view{
  border-bottom: 1px solid #bbb;
  box-sizing: border-box;
}
.c1-left1-top view image,.c1-left1-bottom view image{
  width: 20px;
  height: 20px;
}
.c1-left1-top view image{
  margin-top: -4px;
}
.c1-left1-top view text{
  margin-top: 10px;
}
.c1-left1-top view text,.c1-left1-bottom view text{
  display: block;
}
.c1-left1-bottom{
  width: 100%;
  height: 50%;

}
.c1-left1-bottom view text{
  margin-top: -6px;
}
.c1-left2{
  width: 100%;
  height: 33%;

}
.c1-left3{
  width: 100%;
  height: 34%;

}
.c1-right{
  width: 17%;
  height: 250px;
  float: right;
}
.c1-right view{
  width: 100%;
  height: 62.5px;
  text-align: center;
  line-height: 62.5px;

}
.c1-right view image{
  width: 30px;
  height: 30px;
  margin-top: 5px;
}
.c1-right view text{
  display: block;
  margin-top: -50px;
}
/* 选择时间部分 */
.settime{
  width: 100%;
  height: 100px;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  line-height: 50px;
  font-size: 12px;
  margin-bottom: 30px;
}
.settime view{
  float: left;
  margin-left: 5px;
}
.settime .starttime{
  width: 100%;
  height: 50%;
}
.settime .starttime view{
  float: left;
}

.settime .endtime{
  width: 100%;
  height: 50%;
}

.settime .endtime{
  float: left;
}
.user{
  margin-bottom: 30px;
}
.tijiao{

  padding: 0 20px;
}
